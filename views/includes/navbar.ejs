<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 24px;
    padding: 0 1rem 0 1rem;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }
  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }
  .search-inp {
    border-radius: 24px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem;
  }
  @media (max-width: 575.98px) {
    .res-container {
      background-color: #fff !important;
    }
    .navbar-collapse {
      margin-top: 1rem;
      border-top: 1px solid #dee2e6 !important; /*  Border for mobile navigation */
      border-bottom: 1px solid #dee2e6 !important;
    }
    .navbar-brand,
    .navbar-toggler {
      margin-top: 1rem !important;
    }
    .explore-hide {
      display: none !important;
    }
    .navbar-nav {
      margin-top: 1rem !important; /* Adjust top margin for mobile navigation */
      padding-top: 1rem !important;
      align-items: center !important;
    }
    .navbar-toggler {
      border: none !important; /* Remove border from toggle button for mobile */
    }
    .search-inp {
      padding: 0.5rem 1.5rem !important; /* Adjust padding for search input on mobile */
    }
    .navbar-nav.ms-auto {
      margin-top: 0 !important; /* Reset top margin for right-aligned items on mobile */
    }
  }

  /* Media query for medium devices (e.g., tablets) */
  @media (min-width: 576px) and (max-width: 991.98px) {
    .res-container {
      background-color: #fff !important;
    }
    .explore-hide {
      display: none !important;
    }
    .navbar-collapse {
      margin-top: 1rem;
      border-top: 1px solid #dee2e6 !important; /*  Border for tables navigation */
      border-bottom: 1px solid #dee2e6 !important;
    }
    .navbar-brand,
    .navbar-toggler {
      margin-top: 1rem !important;
    }
    .search-inp {
      padding: 0.5rem 2rem !important; /* Adjust padding for search input on tablet */
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid res-container">
    <a class="navbar-brand offset-1" href="/listings"
      ><i class="fa-regular fa-compass"></i
    ></a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav explore-hide">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input
            class="form-control me-2 search-inp"
            type="search"
            placeholder="Search destinations"
          />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if(!currUser){ %>
        <a class="nav-link" href="/signup"><b>Sign up</b></a>
        <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %> <% if(currUser){ %>
        <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
